{
  "mcpServers": {
    "pyghidra-mcp": {
      "command": "uvx",
      "args": [
        "pyghidra-mcp",
        "--transport", "stdio",
        "--project-path", "/home/tim/github/mithro/ai-shenanigans-for-bmcs/tmp/pyghidra-projects",
        "--project-name", "bmc-firmware"
      ],
      "env": {
        "GHIDRA_INSTALL_DIR": "/home/tim/tools/ghidra"
      }
    },
    "ghidra-mcp": {
      "command": "uv",
      "args": [
        "run",
        "--script",
        "/home/tim/github/mithro/ai-shenanigans-for-bmcs/scripts/bridge_mcp_ghidra.py"
      ],
      "env": {
        "DISPLAY": ":99"
      }
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--browser", "chromium",
        "--viewport-size", "1280x720"
      ],
      "env": {
        "DISPLAY": ":99"
      }
    }
  }
}
